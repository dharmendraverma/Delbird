    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <Button
            android:id="@+id/add_chemist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rounded_box"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="Add More Chemist"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/buy_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorButton"
            android:minHeight="50dp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"/>

        <in.delbird.chemist.CustomViews.GothamBoldTextView
            android:id="@+id/buy_now_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:minHeight="50dp"
            android:textStyle="normal"
            android:layout_marginBottom="50dp"
            android:text=" Continue Buying                  >"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shopListRecylerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_chemist"
            android:padding="8dp"
            android:scrollbars="vertical" />





    </RelativeLayout>
